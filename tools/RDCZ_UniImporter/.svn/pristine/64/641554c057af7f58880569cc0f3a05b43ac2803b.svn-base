package cz.incad.relief3.rdcz.uniimporter.utils;

/**
 *******************************************************************************
 *
 * @author martin
 */
public class Commons {

    /**
     ***************************************************************************
     *
     */
    private Commons() {
    }

    public static final int MAX_STRING_LENGHT = 2500;

    /**
     ***************************************************************************
     *
     * @param leader
     * @return
     */
    public static final String getDruhDokumentuFromLeader(String leader) {
        if (leader != null && leader.length() > 7) {
            char dkchar = leader.toCharArray()[7];
            if (dkchar == 'm') {
                return "BK";
            } else if (dkchar == 's') {
                return "SE";
            } else if (dkchar == 'i') {
                return "IZ";
            } else if (dkchar == 'c') {
                return "MU";
            } else if (dkchar == 'e') {
                return "MP";
            }
        }
        return null;
    }

}
