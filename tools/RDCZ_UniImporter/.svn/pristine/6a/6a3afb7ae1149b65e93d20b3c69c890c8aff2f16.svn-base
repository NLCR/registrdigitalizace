        sb.append("tiff: ").append(tiff).append(StringUtils.LINE_SEPARATOR_WINDOWS);
        sb.append("txt: ").append(txt).append(StringUtils.LINE_SEPARATOR_WINDOWS);

        return sb.toString();
    }

}
